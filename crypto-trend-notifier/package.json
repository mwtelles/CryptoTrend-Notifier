{
  "name": "crypto-trend-notifier",
  "displayName": "CryptoTrend Notifier",
  "description": "Notifies users about cryptocurrency trends and price changes",
  "version": "0.0.4",
  "publisher": "Matheus Telles",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cryptoTrendNotifier.start",
        "title": "Start CryptoTrend Notifier"
      },
      {
        "command": "cryptoTrendNotifier.stop",
        "title": "Stop CryptoTrend Notifier"
      },
      {
        "command": "cryptoTrendNotifier.checkPrices",
        "title": "Check Current Crypto Prices"
      },
      {
        "command": "cryptoTrendNotifier.addAsset",
        "title": "Add a Cryptocurrency Asset"
      },
      {
        "command": "cryptoTrendNotifier.removeAsset",
        "title": "Remove a Cryptocurrency Asset"
      },
      {
        "command": "cryptoTrendNotifier.listAssets",
        "title": "List Monitored Cryptocurrency Assets"
      },
      {
        "command": "cryptoTrendNotifier.openConfig",
        "title": "Open Configuration File"
      },
      {
        "command": "cryptoTrendNotifier.getAsset",
        "title": "Get Specific Cryptocurrency Asset"
      },
      {
        "command": "cryptoTrendNotifier.getAllAssets",
        "title": "Get All Cryptocurrency Assets"
      },
      {
        "command": "cryptoTrendNotifier.getPortfolioValue",
        "title": "Get Portfolio Value"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
